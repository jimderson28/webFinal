@{
    ViewData["Title"] = "專區選擇";
}

<div style="display: flex; flex-direction: column; align-items: center; margin-top: 80px;">
    <h1 style="font-size: 2.2rem; margin-bottom: 40px;">請選擇抽卡專區</h1>

    <div style="display: flex; gap: 40px;">
        <a asp-controller="Pet" asp-action="Index"
           style="display: flex; flex-direction: column; align-items: center;
                  text-decoration: none; background: #f0f0f0; border-radius: 16px;
                  padding: 30px 50px; font-size: 1.5rem; color: #34495e;
                  box-shadow: 0 2px 12px rgba(60,60,60,0.07); transition: box-shadow .2s;">
            🐾 寵物專區
        </a>
        <a asp-controller="Car" asp-action="Index"
           style="display: flex; flex-direction: column; align-items: center;
                  text-decoration: none; background: #f0f0f0; border-radius: 16px;
                  padding: 30px 50px; font-size: 1.5rem; color: #34495e;
                  box-shadow: 0 2px 12px rgba(60,60,60,0.07); transition: box-shadow .2s;">
            🚗 汽車專區
        </a>
        <a asp-controller="Meme" asp-action="Index"
           style="display: flex; flex-direction: column; align-items: center;
                  text-decoration: none; background: #f0f0f0; border-radius: 16px;
                  padding: 30px 50px; font-size: 1.5rem; color: #34495e;
                  box-shadow: 0 2px 12px rgba(60,60,60,0.07); transition: box-shadow .2s;">
            😂 迷因專區
        </a>
    </div>
</div>
